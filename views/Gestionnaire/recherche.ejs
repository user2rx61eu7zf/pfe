<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Recherche </h1>
    <div class="btn-toolbar mb-2 mb-md 0">
      <div class="btn-group me-2">
        <a href="/ajouter_joueur/<%= userId %>" class="btn btn-sm btn-outline-primary">+ Ajouter un joueur</a>
      </div>
    </div>
  </div>
  
  <div class="table-responsive">
    <% if (result!= "") { %>
    
      <table class="table table-striped table-sm">
        <thead>
            <tr>
              <th scope="col">Id</th>
              <th scope="col">Nom</th>
              <th scope="col">Prenom</th>
              
              
             <th scope="col" class="text-end">Gerer</th>
            </tr>
          </thead>
      
          <tbody>
            <% result.forEach(element => { %>
              <tr class="align-middle">
                <td><%= element.id_jo %></td>
                <td><%= element.nom_jo %></td>
                <td><%= element.prenom_jo %></td>
                
                <td class="text-end">
      
                  <div class="d-flex flex-row justify-content-end gap-2">
      
                    <a href="/view/<%= element.id_jo %>/<%= userId %>" type="button" class="btn btn-primary btn-small">
                      <i class="bi bi-eye"></i>
                    </a>
      
                    <a href="/edit/<%= element.id_jo %>/<%= userId %>" type="button" class="btn btn-warning btn-small">
                      <i class="bi bi-pencil"></i>
                    </a>
      
                    <form action="/supprimer/<%= element.id_jo %>/<%= userId %>?_method=DELETE" method="POST" class="position-relative">
                      <button type="submit" class="btn btn-danger btn-small">
                        <i class="bi bi-person-x"></i>
                      </button>
                    </form>
      
                  </div>
      
      
                </td>
              </tr>
            <% }) %>
          </tbody>
      </table>
  
    <% } else { %>
      <h2>Aucun résultat trouvé </h2>
    <% } %>
  
  </div>