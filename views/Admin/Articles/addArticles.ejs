<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Ajouter un Article</title>
</head>

<body>
    <div
        class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Ajouter un Article</h1>
        <div class="btn-toolbar mb-2 mb-md 0">
            <div class="btn-group me-2">
                <button class="btn btn-outline-primary">
                    <i class="bi bi-info-circle"></i> Aide0
                </button>
            </div>
        </div>
    </div>
    <div class="col py-1">
        <div class="row">
            <div class="col">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/Admin">Acceuil</a></li>
                        <li class="breadcrumb-item active">Nouveau Article</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
    <form action="/ajouter_Articles" method="POST" class="needs-validation" novalidate>
        <div>
            <label for="validationCustom01" class="form-label">Titre</label>
            <input type="text" class="form-control" name="titre" id="validationCustom01" value="" required />
            <div class="valid-feedback"></div>
        </div>
        <div>
            <label for="validationCustom02" class="form-label">Description</label>
            <textarea class="form-control" name="description" id="validationCustom02" required></textarea>
            <div class="valid-feedback"></div>
        </div>

        <div>
            <label for="validationCustom01" class="form-label">Format</label>
            <input type="text" class="form-control" name="format" id="validationCustom01" value="" required />
            <div class="valid-feedback"></div>
        </div>
        <div>
            <label for="validationCustom01" class="form-label">Date</label>
            <input type="text" class="form-control" name="date" id="validationCustom01" value="" required />
            <div>
                <label for="validationCustom01" class="form-label">Auteur</label>
                <input type="text" class="form-control" name="auteur" id="validationCustom01" value="" required />
                <div class="valid-feedback"></div>
            </div>
            <div class="valid-feedback"></div>
        </div>
        <div>
            <button class="btn btn-primary mt-3" type="submit">Ajouter</button>
        </div>
    </form>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
        integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
        integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
        crossorigin="anonymous"></script>
    <script>
        (function () {
            "use strict";
            var forms = document.querySelectorAll(".needs-validation");

            Array.prototype.slice.call(forms).forEach(function (form) {
                form.addEventListener(
                    "submit",
                    function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault();
                            event.stopPropagation();
                        }

                        form.classList.add("was-validated");
                    },
                    false
                );
            });
        })();

